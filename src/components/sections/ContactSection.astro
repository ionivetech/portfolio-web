---
import { Icon } from 'astro-icon/components'
---

<section
  id='contact-section'
  class='py-16 sm:py-20'
>
  <div class='mb-8'>
    <h2 class='mb-2 text-4xl font-bold text-white md:text-5xl'>Letâ€™s discuss</h2>
    <p class='prose text-gray-400 md:prose-lg'>
      If you want to discuss with me, hire me, or talk about a project, please contact me
    </p>
  </div>

  <textarea
    id='message-field'
    rows='3'
    class='w-full resize-none rounded-lg border border-gray-700 bg-slate-900/60 p-3 font-normal text-white transition-colors duration-300 ease-linear placeholder:text-gray-400 focus:border-blue-400 focus:outline-none'
    placeholder='Message'
  ></textarea>

  <button
    id='send-message-btn'
    class='mt-4 rounded-lg bg-gradient-to-br from-blue-500 to-teal-600 px-5 py-2.5 font-medium text-white'
  >
    Send Message
  </button>

  <div class='mt-12 flex space-x-3'>
    <a
      href='https://github.com/ionivetech'
      aria-label='Github'
      target='_blank'
    >
      <Icon
        name='mdi:github'
        class='h-7 w-7 text-gray-300'
      />
    </a>
    <a
      href='https://www.linkedin.com/in/faridnugraha/'
      aria-label='Linkedin'
      target='_blank'
    >
      <Icon
        name='mdi:linkedin'
        class='h-7 w-7 text-gray-300'
      />
    </a>
    <a
      href='mailto:fnuugraha@outlook.com'
      aria-label='Email'
      target='_blank'
    >
      <Icon
        name='mdi:email'
        class='h-7 w-7 text-gray-300'
      />
    </a>
  </div>
</section>

<script>
  document.getElementById('send-message-btn').addEventListener('click', () => {
    sendMessage()
  })

  function sendMessage() {
    const element = document.getElementById('message-field') as HTMLInputElement

    if (element) {
      const message = element.value
      window.open(`https://api.whatsapp.com/send/?phone=6281296464313&text=${message}`)
    }
  }
</script>
