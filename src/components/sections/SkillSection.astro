---
import { Icon } from 'astro-icon'
import dataSkill from 'data/skill.json'

// Interfaces
interface ISkills {
  icon: string
  name: string
  description: string
}

const skills: ISkills[] = dataSkill
---

<section
  id='skill-section'
  class='py-16 sm:py-20'
>
  <div class='mb-8'>
    <h2 class='mb-2 text-4xl font-bold text-white md:text-5xl'>Skills</h2>
    <p class='prose text-gray-400 md:prose-lg'>
      I have skills in web development, familiar using javascript, typescript, and frontend
      development frameworks such as Vue and React
    </p>
  </div>

  <div class='grid grid-cols-skills gap-5'>
    {
      skills.map((skill) => (
        <div class='flex space-x-4 rounded-lg border border-transparent p-2 transition-all duration-300 ease-linear hover:border-gray-700 hover:bg-background-soft/40 hover:shadow-skill-hover sm:p-3 lg:p-4'>
          <div class='flex h-12 w-12 min-w-[48px] max-w-[48px] items-center justify-center rounded-full bg-background-soft'>
            {skill.name === 'Pinia' ? (
              <img
                src='/logo/pinia.svg'
                alt='pinia-logo'
                width='24'
                height='24'
                class='h-6 w-6'
              />
            ) : (
              <Icon
                name={skill.icon}
                class='h-6 w-6'
              />
            )}
          </div>

          <div>
            <p class='mb-2 text-sm font-semibold text-gray-200'>{skill.name}</p>
            <p class='text-sm leading-relaxed text-gray-400'>{skill.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
