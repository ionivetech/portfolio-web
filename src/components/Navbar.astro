---
const menuLists: { url: string; label: string }[] = [
  { url: '#home-section', label: 'Home' },
  { url: '#about-section', label: 'About' },
  { url: '#skill-section', label: 'Skills' },
  { url: '#experience-section', label: 'Experience' },
  { url: '#', label: 'Project' },
  { url: '#', label: 'Contact' }
]
---

<div
  class='fixed top-0 z-50 h-16 w-full border-b border-slate-300/10 bg-slate-900/50 py-4 backdrop-blur'
>
  <div class='container flex h-full items-center justify-between'>
    <div class='text-white'>haloo</div>

    <div class='space-x-5'>
      {
        menuLists.map((menu) => (
          <a
            href={menu.url}
            class='text-sm font-medium text-gray-400 transition-colors duration-200 ease-linear hover:text-blue-400 md:text-base'
          >
            {menu.label}
          </a>
        ))
      }
    </div>
  </div>
</div>
